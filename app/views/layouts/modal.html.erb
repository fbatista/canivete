<%= turbo_frame_tag "modal", target: "_top" do %>
  <div tabindex="-1" aria-hidden="true" class="flex overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 max-w-full max-h-full">
      <!-- Modal content -->
      <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
        <!-- Modal header -->
        <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
            <%= yield :title %>
          </h3>
          <%= yield :close %>
        </div>
        <!-- Modal body -->
        <div class="p-4 md:p-5 ">
          <%= yield %>
        </div>
        <!-- Modal footer -->
        <div class="flex items-center p-4 md:p-5 border-t border-gray-200 rounded-b dark:border-gray-600">
          <%= yield :footer %>
        </div>
      </div>
    </div>
  </div>
  <div class="bg-gray-900/50 dark:bg-gray-900/80 fixed inset-0 z-40"></div>
<% end %>
