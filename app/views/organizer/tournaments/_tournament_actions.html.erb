<% if current_user.organizer?(tournament)%>
  <%= link_to [:edit, :organizer, tournament], class: 'inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-white rounded-lg bg-orange-700 hover:bg-orange-800 focus:ring-4 focus:ring-orange-300 dark:focus:ring-orange-900', data: {turbo_frame: "modal"} do %>
    <%= icon("pencil", class: "mr-2") %> Manage
  <% end %>
<% end %>

<% if tournament.rounds.present? %>
  <%= link_to [:organizer, tournament, tournament.rounds.sort_by(&:number).last.becomes(Round)], class: "inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-gray-900 rounded-lg border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 dark:text-white dark:border-gray-700 dark:hover:bg-gray-700 dark:focus:ring-gray-800" do %>
    <%= icon("tree-structure", class: "mr-2") %> Bracket
  <% end %>
<% end %>
